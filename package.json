{
	"name": "@lesjoursfr/bin-wrapper",
	"version": "12.1.10",
	"description": "Binary wrapper that makes your programs seamlessly available as local dependencies",
	"license": "MIT",
	"repository": {
		"url": "git+https://github.com/lesjoursfr/bin-wrapper.git"
	},
	"homepage": "https://github.com/lesjoursfr/bin-wrapper#readme",
	"bugs": {
		"url": "https://github.com/lesjoursfr/bin-wrapper/issues"
	},
	"publishConfig": {
		"access": "public"
	},
	"author": {
		"name": "Kevin MÃ¥rtensson",
		"email": "kevinmartensson@gmail.com",
		"url": "https://github.com/kevva"
	},
	"engines": {
		"node": "20.x || 22.x || 24.x"
	},
	"exports": "./lib/index.js",
	"types": "./lib/index.d.ts",
	"files": [
		"lib/**/*",
		"src/**/*"
	],
	"scripts": {
		"freshlock": "rm -rf node_modules/ && rm .yarn/install-state.gz && rm yarn.lock && yarn",
		"check-lint": "eslint",
		"check-format": "prettier --check .",
		"check-tsc": "tsc --noEmit",
		"lint": "eslint --fix",
		"format": "prettier --write .",
		"build": "tsc",
		"test": "NODE_OPTIONS='--loader=ts-node/esm' mocha"
	},
	"keywords": [
		"bin",
		"check",
		"local",
		"wrapper"
	],
	"type": "module",
	"dependencies": {
		"@lesjoursfr/bin-check": "^7.1.9",
		"@lesjoursfr/bin-version": "^7.1.9",
		"arch": "^3.0.0",
		"axios": "^1.11.0",
		"content-disposition": "^0.5.4",
		"file-type": "^21.0.0",
		"semver": "^7.7.2",
		"semver-truncate": "^3.0.0",
		"tar": "^7.4.3"
	},
	"devDependencies": {
		"@eslint/js": "^9.33.0",
		"@tsconfig/node20": "^20.1.6",
		"@types/content-disposition": "^0.5.9",
		"@types/mocha": "^10.0.10",
		"@types/node": "^22.17.1",
		"@types/semver": "^7.7.0",
		"@types/tar": "^6.1.13",
		"eslint": "^9.33.0",
		"eslint-config-prettier": "^10.1.8",
		"globals": "^16.3.0",
		"isexe": "^3.1.1",
		"mocha": "^11.7.1",
		"nock": "^14.0.9",
		"prettier": "^3.6.2",
		"tempy": "^3.1.0",
		"ts-node": "^10.9.2",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.39.0"
	},
	"packageManager": "yarn@4.9.2"
}
