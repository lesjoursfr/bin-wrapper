{
	"name": "@lesjoursfr/bin-wrapper",
	"version": "12.1.5",
	"description": "Binary wrapper that makes your programs seamlessly available as local dependencies",
	"license": "MIT",
	"repository": {
		"url": "git+https://github.com/lesjoursfr/bin-wrapper.git"
	},
	"homepage": "https://github.com/lesjoursfr/bin-wrapper#readme",
	"bugs": {
		"url": "https://github.com/lesjoursfr/bin-wrapper/issues"
	},
	"publishConfig": {
		"access": "public"
	},
	"author": {
		"name": "Kevin MÃ¥rtensson",
		"email": "kevinmartensson@gmail.com",
		"url": "https://github.com/kevva"
	},
	"engines": {
		"node": "18.x || 20.x"
	},
	"exports": "./lib/index.js",
	"types": "./lib/index.d.ts",
	"files": [
		"lib/**/*",
		"src/**/*"
	],
	"scripts": {
		"freshlock": "rm -rf node_modules/ && rm .yarn/install-state.gz && rm yarn.lock && yarn",
		"check-lint": "eslint . --ext .js,.jsx,.ts,.tsx",
		"check-format": "prettier --check \"**/*.{ts,js,cjs,mjs,json,yml,md}\"",
		"check-tsc": "tsc --noEmit",
		"lint": "eslint . --fix --ext .js,.jsx,.ts,.tsx",
		"format": "prettier --write \"**/*.{ts,js,cjs,mjs,json,yml,md}\"",
		"build": "tsc",
		"test": "NODE_OPTIONS='--loader=ts-node/esm' mocha"
	},
	"keywords": [
		"bin",
		"check",
		"local",
		"wrapper"
	],
	"type": "module",
	"dependencies": {
		"@lesjoursfr/bin-check": "^7.1.5",
		"@lesjoursfr/bin-version": "^7.1.5",
		"arch": "^3.0.0",
		"axios": "^1.6.8",
		"content-disposition": "^0.5.4",
		"file-type": "^19.0.0",
		"semver": "^7.6.0",
		"semver-truncate": "^3.0.0",
		"tar": "^7.1.0"
	},
	"devDependencies": {
		"@tsconfig/node18": "^18.2.4",
		"@types/content-disposition": "^0.5.8",
		"@types/mocha": "^10.0.6",
		"@types/node": "^20.12.7",
		"@types/semver": "^7.5.8",
		"@types/tar": "^6.1.13",
		"@typescript-eslint/eslint-plugin": "^7.7.1",
		"@typescript-eslint/parser": "^7.7.1",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"isexe": "^3.1.1",
		"mocha": "^10.4.0",
		"nock": "^13.5.4",
		"prettier": "^3.2.5",
		"tempy": "^3.1.0",
		"ts-node": "^10.9.2",
		"typescript": "^5.4.5"
	},
	"packageManager": "yarn@4.1.1"
}
